<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:background="@color/white_pure"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/comic_img_share"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="52.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="-25.0dip">

            <RelativeLayout
                android:id="@+id/rl_bg"
                android:layout_width="51.0dip"
                android:layout_height="52.0dip"
                android:background="@drawable/avarat_small_bg">


                <ImageView
                    android:id="@+id/img_user_share"
                    android:layout_width="50.0dip"
                    android:layout_height="50.0dip" />
            </RelativeLayout>

            <TextView
                android:id="@+id/comic_name"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:layout_toRightOf="@+id/rl_bg"
                android:gravity="bottom"
                android:text="用户名"
                android:textColor="@color/black_info_title"
                android:textSize="@dimen/main_text_size_large" />
        </RelativeLayout>

        <TextView
            android:id="@+id/comic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5.0dip"
            android:text="描述"
            android:textColor="@color/black"
            android:textSize="@dimen/main_text_size_normal" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35.0dip"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10.0dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_comment_share"
                        android:layout_width="17.5dip"
                        android:layout_height="17.5dip"
                        android:layout_marginRight="7.5dip"
                        android:background="@drawable/daily_comment" />

                    <TextView
                        android:id="@+id/tv_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+22"
                        android:textColor="@color/comic_title"
                        android:textSize="@dimen/text_size_13" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_like"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/selector_like_btn"
                    android:gravity="center"
                    android:paddingLeft="25.0dip"
                    android:paddingRight="25.0dip">

                    <ImageView
                        android:id="@+id/iv_like_share"
                        android:layout_width="17.5dip"
                        android:layout_height="15.0dip"
                        android:layout_marginRight="7.5dip"
                        android:background="@drawable/liked_gray2x" />

                    <TextView
                        android:id="@+id/tv_likenum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+22"
                        android:textColor="@color/comic_title"
                        android:textSize="@dimen/text_size_13" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dip"
                    android:layout_height="22.0dip"
                    android:background="@color/black_margin" />

                <TextView
                    android:id="@+id/btn_category"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:paddingLeft="25.0dip"
                    android:paddingRight="25.0dip"
                    android:text="分类"
                    android:textColor="@color/black_info_time"
                    android:textSize="@dimen/main_text_size_normal" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_alignParentBottom="true"
            android:background="@color/black_margin" />
    </LinearLayout>
</LinearLayout>