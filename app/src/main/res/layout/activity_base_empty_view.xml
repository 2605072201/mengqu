<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_empty"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/gray_background" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/gray_background"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageview_empty_view"
            android:layout_width="90.0dip"
            android:layout_height="90.0dip"
            android:src="@drawable/icon_page_empty" />

        <TextView
            android:id="@+id/textview_empty_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:gravity="center"
            android:text="数据为空"
            android:textColor="@color/gray_text_4"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/textview_empty_view_refresh"
            android:layout_width="110.0dip"
            android:layout_height="38.0dip"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/shape_gray_solid_green_stroke"
            android:gravity="center"
            android:text="刷新"
            android:textColor="@color/zaiwai_name"
            android:textSize="15.0sp" />
    </LinearLayout>

</LinearLayout>