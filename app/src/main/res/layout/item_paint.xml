<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:background="@color/white_pure"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/comic_img_paint"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="52.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="-25.0dip">

            <RelativeLayout
                android:id="@+id/rl_bg"
                android:layout_width="51.0dip"
                android:layout_height="52.0dip"
                android:background="@drawable/avarat_small_bg">

                <ImageView
                    android:id="@+id/img_user_paint"
                    android:layout_width="50.0dip"
                    android:layout_height="50.0dip" />
            </RelativeLayout>

            <TextView
                android:id="@+id/comic_name"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:layout_toRightOf="@+id/rl_bg"
                android:gravity="bottom"
                android:text="用户名"
                android:textColor="@color/black_info_title"
                android:textSize="@dimen/main_text_size_large" />
        </RelativeLayout>

        <TextView
            android:id="@+id/comic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="8.0dip"
            android:text="描述"
            android:textColor="@color/comic_title"
            android:textSize="@dimen/main_text_size_normal" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginTop="10.0dip"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:layout_marginBottom="10.0dip"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_like_paint"
                    android:layout_width="26.0dip"
                    android:layout_height="23.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15.0dip"
                    android:background="@drawable/liked_gray2x" />

                <View
                    android:id="@+id/magin"
                    android:layout_width="0.5dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:layout_toLeftOf="@+id/iv_like_paint"
                    android:background="@color/black_margin" />

                <Button
                    android:id="@+id/like_btn"
                    android:layout_width="50.0dip"
                    android:layout_height="25.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7.0dip"
                    android:layout_toLeftOf="@+id/magin"
                    android:background="@drawable/shape_comic_like"
                    android:gravity="center"
                    android:text="+33"
                    android:textColor="@color/white_pure"
                    android:textSize="12.0sp" />

                <LinearLayout
                    android:id="@+id/ll_container"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/like_btn"
                    android:gravity="right"
                    android:orientation="horizontal" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_alignParentBottom="true"
                android:background="@color/black_margin" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>