<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="loading_progress">
        <item name="android:layout_width">54.0dip</item>
        <item name="android:layout_height">68.0dip</item>
        <item name="android:indeterminateDrawable">@drawable/page_loading</item>
    </style>
    <style name="mys" parent="Theme.AppCompat">
        <item name="windowActionBar" >false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>




    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:fadingEdgeLength">0.0dip</item>
        <item name="android:longClickable">false</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:listSelector">@drawable/list_item_selector</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:scrollingCache">true</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0.0dip</item>
        <item name="android:fastScrollEnabled">false</item>
    </style>

    <style name="AppTheme2" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:listDivider">@drawable/divider_item</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:actionBarSize">56.0dip</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleText</item>
    </style>

    <style name="ActionBar.TitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="AppTheme3" parent="@style/AppTheme.Base" />
    <style name="AppTheme.Base" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/white2</item>
    </style>


</resources>
